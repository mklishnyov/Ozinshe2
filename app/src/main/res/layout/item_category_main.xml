<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgCategoryMovie"
        android:layout_width="112dp"
        android:layout_height="208dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitleMovie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:fontFamily="@font/sf_semibold"
        android:textColor="@color/grey_900"
        android:text="Айдар"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/imgCategoryMovie"
        app:layout_constraintEnd_toEndOf="@id/imgCategoryMovie"
        app:layout_constraintTop_toBottomOf="@+id/imgCategoryMovie"/>

    <TextView
        android:id="@+id/tvCategoryMovie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:fontFamily="@font/sf_regular"
        android:textColor="@color/grey_400"
        android:text="Мультсериал"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/imgCategoryMovie"
        app:layout_constraintEnd_toEndOf="@id/imgCategoryMovie"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleMovie"/>

</androidx.constraintlayout.widget.ConstraintLayout>