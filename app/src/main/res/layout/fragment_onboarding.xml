<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OnboardingFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager2WelcomeFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/background_button_8dp_circle"
        android:text="Өткізу"
        android:textAllCaps="false"
        android:textSize="12dp"
        android:fontFamily="@font/sf_medium"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom">

        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/dotsIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            app:dotsColor="@color/grey_300"
            app:dotsSize="7dp"
            app:dotsSpacing="4dp"
            app:dotsWidthFactor="2.5"
            app:selectedDotColor="@color/primary_300"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="bottom"
            android:background="@drawable/background_button_12dp_circle"
            android:fontFamily="@font/sf_semibold"
            android:textStyle="normal"
            android:text="Әрі қарай"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/primary_500"
            android:layout_marginBottom="38dp"
            android:layout_marginHorizontal="24dp" />
    </LinearLayout>
</FrameLayout>